<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
		<servlet-name>init</servlet-name>
		<servlet-class>org.gwtproject.tutorial.server.BootstrapValidationServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>org.gwtproject.tutorial.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
  <servlet-name>requestFactoryServlet</servlet-name>
  <servlet-class>com.google.web.bindery.requestfactory.server.RequestFactoryServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/requestfactorylongdemo/greet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>requestFactoryServlet</servlet-name>
  <url-pattern>/gwtRequest</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>RequestFactoryLongDemo.html</welcome-file>
  </welcome-file-list>

</web-app>
